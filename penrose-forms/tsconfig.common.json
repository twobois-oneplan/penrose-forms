{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "target": "es6"
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  },
  "files": [
    "src/index.ts"
  ]
}
