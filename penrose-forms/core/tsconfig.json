{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "noEmitHelpers": false,
    "target": "ES5",
    "outDir": "./",
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./"
  ]
}
